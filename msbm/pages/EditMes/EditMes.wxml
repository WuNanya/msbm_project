<view class="page centerPage-wrap" data-router="userCenterPage" id="userCenterPage" role="" aria-label="">
  <view class="centerPage-user-info" role="" aria-label="">
    <view class="js-change-cover" role="" aria-label="">
      <open-data type="userAvatarUrl" class="cover-thumb" ></open-data>
      <label class="ico-moon icon-rightarrow"></label>
    </view>
  </view>
  <view class="centerPage-user-info" role="" aria-label="">
    <view class="centerPage-info-item" role="" aria-label="">
      <label>姓名</label>
      <label class="ico-moon icon-rightarrow"></label>
      <input bindinput="inputNickname" class="nickname" placeholder="请输入您的姓名(必填)" value="{{name}}"> 
      </input>
    </view>

    <view class="centerPage-info-item" role="" aria-label="">
      <label>性别</label>
      <picker bindchange="bindPickerChange" class="centerPage-sex" mode="selector" range="{{array}}" value="{{sex}}"> {{array[sex]}}
      </picker>
    </view>

      <view class="centerPage-info-item" role="" aria-label="">
      <label>年龄</label>
      <label class="ico-moon icon-rightarrow"></label>
      <input type='number' bindinput="ageChange" class="nickname" placeholder="请输入您的年龄（必填）" value="{{age}}"> 
      </input>
    </view>

     <view class="centerPage-info-item" role="" aria-label="">
      <label>手机号</label>
      <label class="ico-moon icon-rightarrow"></label>
      <input type="number" bindinput="telChange" class="nickname" placeholder="请输入您的手机号（必填）" value="{{tel}}"> 
      </input>
    </view>

  </view>
</view>
<view bindtap="saveUserInfo" class="centerPage-save-btn" role="" aria-label="">提交</view>