<!--pages/mine/mine.wxml-->
<view class="container">
  <view class='blue'>
    <view class="userInfo">
      <open-data class="userAvatarUrl" type="userAvatarUrl"></open-data>
      <open-data class="userName" type="userNickName"></open-data>
      <view class="edit" bindtap="editUserInfo">编辑信息
        <image class='head' src='../../picture/black_head.png'></image>
      </view>
    </view>


  </view>
  <view class="other">
    <view class='top'>
      <view class=" sign myTable" bindtap="myTable">
        <image style='margin-right:10rpx;' class='icon' src='../../picture/note.png'></image>我创建的活动
        <image style='margin-right:30rpx;' class='head head-bottom ' src='../../picture/black_head.png'></image>
      </view>

      <view class="sign record" bindtap="record">
        <image style='margin-right:10rpx;' class='icon' src='../../picture/join.png'></image>我参加的活动
        <image style='margin-right:30rpx;' class='head head-bottom' src='../../picture/black_head.png'></image>
      </view>

    </view>

    <view class="sign  option" bindtap="user_option">
      <image style='margin-right:10rpx;' class='icon' src='../../picture/suggest.png'></image>用户反馈
      <image style='margin-right:30rpx;' class='head head-bottom2' src='../../picture/black_head.png'></image>
    </view>

  </view>
</view>