.container{
  padding-top:20rpx;
  background-color: #eee;
  height: 97vh;
  align-items: center;
  width:100%;
  display: flex;
  flex-direction: column;
  
}

.name{
  font-weight: bold;
  font-size: 38rpx;
}

.header{
  border-radius: 15rpx;
  border-width: 1rpx 0 1rpx 0;
  border-color: gainsboro;
  border-style: solid;
  background-color: white;
  height: 160rpx;
  width: 710rpx;
}

.special{
  display: inline;
}

.header{
  margin-top: rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  height: 200rpx;
}
.header_top{
  padding-left: 40rpx;
  padding-right: 70rpx;
  display: flex;
  justify-content: space-between;
  height: 150rpx;
  align-items: center;
  font-size: 33rpx;
  border-width: 0 0 1rpx 0;
  border-color: #eee;
  border-style: solid;
  margin-bottom: 20rpx;


}
.header_bottom{
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  padding-left:  40rpx;
  padding-right: 80rpx;
  margin-bottom: 20rpx;

}

.body{
  border-radius: 15rpx;
  width: 710rpx;
  border-width:0rpx 0 1rpx 0;
  border-color: gainsboro;
  border-style: solid;
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.body_title{
  font-size: 31rpx;
  border-width: 1rpx 0 1rpx 0;
  border-style: solid;
  border-color:gainsboro;
  padding: 15rpx;
  padding-left: 40rpx;
  padding-top: 20rpx;
  height: 50rpx;

}

.body_content{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-left: 35rpx;

}

.content{
  padding: 3rpx;
  min-height: 65rpx;
  font-size: 31rpx;
}

.bottom{
  border-radius: 15rpx;
  width: 710rpx;
  border-width: 1rpx 0 1rpx 0;
  border-style: solid;
  border-color: gainsboro;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 20rpx;
}

.introduction_title{
  padding-left: 40rpx;
  padding-top: 20rpx;
  font-size: 31rpx;

  border-bottom: 1rpx;
  padding-bottom: 20rpx;
  border-width: 1rpx;
  border-color: #eee;
  border-style: solid;
}

.introduction_content{
  height: 100%;
  padding: 20rpx 30rpx 30rpx 30rpx;
  font-size: 29rpx;
}

.btn{
  position: absolute;
  bottom: 0;
  width: 100%;
  height:110rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  color:white;
}

.cancel{
  text-align: center;
  background-color:#1296db;
  width: 50%;
  padding: 30rpx;

}

.sign{
  padding: 30rpx;
  text-align: center;
  background-color:gray;
  width: 50%;

}